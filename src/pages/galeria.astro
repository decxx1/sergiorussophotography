---
import Layout from '@/layouts/Layout.astro';
import images from '@/services/images.json';
---
<Layout 
    title="Galería - Sergio Russo Photography"
    canonical="https://sergiorussophotography.com.ar/galeria"
    metaTitle="Galería de Fotos de Sergio Russo - Fotografías de estilo propio"
    metaDescription="Explora la impresionante galería de fotos de Sergio Russo, un experto fotógrafo en glamour y moda. Descubre su estilo único y vive la emoción en cada imagen."
    metaImg="https://sergiorussophotography.com.ar/images/galeria/thumb/04.jpg"
    >
    <section class="ftco-section ftco-bread">
        <div class="container">
            <div class="row no-gutters slider-text justify-content-center align-items-center">
                <div class="col-md-6">
                    <p class="breadcrumbs" transition:animate="slide"><span class="mr-2"><a href="./">Inicio</a></span> <span>Galería</span></p>
                    <h1 class="bread" transition:animate="slide">Mi galería de fotos</h1>
                </div>
                <div class="col-md-6 text-center" transition:animate="slide">
                    <img class="mt-5" src="/images/logo-blanco.png" style="width: 250px;" />
                </div>
            </div>
        </div>
    </section>
    <section class="ftco-section-3">
        <div class="photograhy">
            <div class="grid-wrapperimg" id="galleryID">
                {
                    images.map((image, index) => (
                        <a class={image.class} data-pswp-src={image.src} data-pswp-width={image.width} data-pswp-height={image.height}>
                            <img loading="lazy" class="img-grid-mosaic" src={image.thumb} alt={'Sergio-russo-photography '+ index} />
                        </a>
                    ))
                }
            </div>
            <div class="d-flex justify-content-center">
                <video class="video-vertical" controls preload="none" poster="/images/thumb/alquiler-thumb.webp" width="1280" height="720">
                    <source src="/videos/alquiler-de-estudio.mp4" type="video/mp4">
                    No se puede reproducir el video desde este navegador.
                </video>
            </div>
        </div>
    </section>
</Layout>

<script>
import PhotoSwipeLightbox from 'photoswipe/lightbox';
import 'photoswipe/style.css';

const lightbox = new PhotoSwipeLightbox({
    gallery: '#galleryID',
    children: 'a',
    mouseMovePan: true,
    showHideAnimationType: 'zoom',
    initialZoomLevel: 'fit',
    secondaryZoomLevel: 1.5,
    maxZoomLevel: 1,

    imageClickAction: 'close',
    tapAction: 'close',

    pswpModule: () => import('photoswipe')
    
});

lightbox.init();
</script>
<style>
.video-vertical {
    width: 100%;
    height: 100%;
}
@media (min-width: 480px) {
    .video-vertical {
        width: 50%;
        height:100%;
    }
}
@media (min-width: 992px) {
    .video-vertical {
        width: 25%;
        height:100%;
    }
}
@media (min-width: 1280) {
    .video-vertical {
        width: 15%;
        height:100%;
    }
}
</style>
