---
import Layout from '@/layouts/Layout.astro';
import ContactForm from '@/components/ContactForm.vue';
import {
    telphoneLinkeable,
    telphoneReadble,
    whatsappLinkeable,
    whatsappReadble,
    email,
    siteKey,
    mapIframe,
} from '@/services/env.js';
---
<Layout 
    title="Contacto - Sergio Russo Photography"
    canonical="https://sergiorussophotography.com.ar/contacto"
    metaTitle="Contactame - Sergio Russo Photography"
    metaDescription="¿Tienes alguna consulta o proyecto en mente? Escríbeme aquí, estoy dispuesto a ayudarte a capturar tus momentos más especiales en imágenes llenas de glamour y elegancia. Contacta conmigo ahora."
    metaImg="https://sergiorussophotography.com.ar/images/logo.png"
    >
    <section class="ftco-section ftco-bread">
        <div class="container">
            <div class="row no-gutters slider-text justify-content-center align-items-center">
              <div class="col-md-8 ">
                <p class="breadcrumbs" transition:animate="slide"><span class="mr-2"><a href="./">Inicio</a></span> <span>Contacto</span></p>
                <h1 class="bread" transition:animate="slide">Contacto</h1>
              </div>
            </div>
        </div>
    </section>
    <section class="ftco-section contact-section">
        <div class="container">
            <div class="row d-flex mb-5 contact-info" transition:animate="fade">
                <div class="col-md-12 mb-4">
                    <h2 class="h3 font-weight-bold">Información</h2>
                </div>
                <div class="w-100"></div>
                <div class="col-md-4 d-flex">
                    <div class="info bg-light p-4">
                        <p><strong>WhatsApp:</strong><br/><a target="_blank" href={'https://wa.me/54'+whatsappLinkeable}> {whatsappReadble}</a></p>
                    </div>
                </div>
                <div class="col-md-4 d-flex">
                    <div class="info bg-light p-4">
                        <p><strong>Teléfono:</strong><br/><a target="_blank" href={'tel://'+telphoneLinkeable}> {telphoneReadble}</a></p>
                    </div>
                </div>
                <div class="col-md-4 d-flex">
                    <div class="info bg-light p-4">
                        <p><strong>E-mail:</strong> <a target="_blank" href={'mailto:'+email}>{email}</a></p>
                    </div>
                </div>
            </div>
            <div class="row block-9">
                <ContactForm client:idle />

                <div class="col-md-6 d-flex" set:html={mapIframe}>
                </div>
            </div>
        </div>
    </section>
</Layout>

<!-- recaptcha v3 -->
<script async src={'https://www.google.com/recaptcha/api.js?render=' + siteKey}></script>
<style>
.fullHeight{
    height: 100vh;
    object-fit: cover;
}
</style>
